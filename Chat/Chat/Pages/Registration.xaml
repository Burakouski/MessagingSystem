                    <GradientStop Color="#FF7EA326" Offset="0" />
                    <GradientStop Color="#FF2C6F3C" Offset="1" />
                </RadialGradientBrush>
            </Button.Background>
        </Button>
        <dxe:PasswordBoxEdit HorizontalAlignment="Left" Margin="307,319,0,0" x:Name="passBox" VerticalAlignment="Top" Width="299" ShowNullText="True" Height="40" FontSize="25" FontStretch="Condensed" BorderThickness="0" HorizontalContentAlignment="Center" HorizontalScrollBarVisibility="Hidden" ShowCapsLockWarningToolTip="True" ShowBorder="False" UseLayoutRounding="False" FontStyle="Italic" Foreground="#FFFFF8F8" FontWeight="Normal" VerticalContentAlignment="Top">
