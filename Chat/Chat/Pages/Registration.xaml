                    <GradientStop Color="White" Offset="0.98" />
                    <GradientStop Color="Black" Offset="1" />
                </LinearGradientBrush>
            </dxe:PasswordBoxEdit.BorderBrush>
        </dxe:PasswordBoxEdit>
