                    <GradientStop Color="#FF7EA326" Offset="0" />
                    <GradientStop Color="#FF2C6F3C" Offset="1" />
                </RadialGradientBrush>
            </DatePicker.Background>
        </DatePicker>
        <Button x:Name="btnCancel" Content="Отмена" HorizontalAlignment="Left" Margin="307,439,0,0" VerticalAlignment="Top" Width="150" Height="40" FontSize="20" FontStyle="Italic" Foreground="#FFFFF8F8" Click="btnCancel_Click" >
