            </TextBox.Background>
        </TextBox>
        <Button x:Name="btnOK" Content="OK" HorizontalAlignment="Left" Margin="462,439,0,0" VerticalAlignment="Top" Width="150" Height="40" FontSize="20" FontStyle="Italic" Foreground="#FFFFF8F8" Click="btnOK_Click" >
            <Button.Background>
                <RadialGradientBrush>
                    <GradientStop Color="#FF7EA326" Offset="0" />
                    <GradientStop Color="#FF2C6F3C" Offset="1" />
                </RadialGradientBrush>
            </Button.Background>
        </Button>
